<!DOCTYPE html>
<html>
  <head>
    <title>Img</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <%= link_to 'img.joel.so', images_path, :class => 'navbar-brand' %>
        <ul class="nav navbar-nav pull-right">
          <li>
            <%= link_to '/', images_path %>
          </li>
          <li>
            <a href="#" data-toggle="modal" data-target="#uploadModal">new</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>

    <%= render 'elements/upload' %>

    <footer>
      <div class="container">
        <p>
          Copyright &copy; img.joel.so<br>
          Licensed under the MIT License
        </p>
      </div>
    </footer>

  </body>
</html>
